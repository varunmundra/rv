<% if @sip_lumpsum == 1 %>

	<table class="table table-bordered">

		<thead>
			<tr>
				<th>Scheme Name</th>
				<th>Folio</th>
				<th>SIP Day</th>
				<th>No of months</th>
				<th>Dividend Option</th>
				<th>Amount</th>
					
			</tr>
		</thead>

	<% @transactions_invoice.each do |transaction| %>
	<% @fund = Fund.find_by_id(transaction.fund_id) %>
		<tbody>

		    <tr>
		      <td><%= @fund.scheme_name %></td>      
		      <td><%= transaction.folio_id %></td>
		      <td><%= transaction.sip_start_date %></td>
		      <td><%= transaction.sip_installments %></td>
		      <td><%= transaction.reinvestment_tag %></td>
		      <td><%= transaction.amount %></td>
		      
			</tr>
		</tbody>

	  <% end %>
	</table>




<%else %>


	<table class="table table-bordered">

		<thead>
			<tr>
				<th>Scheme Name</th>
				<th>Folio</th>
				<th>Transaction ID</th>
				<th>Amount</th>
				<th>Dividend Option</th>
			</tr>
		</thead>

	<% @transactions_invoice.each do |transaction| %>
	<% @fund = Fund.find_by_id(transaction.fund_id) %>
		<tbody>

		    <tr>
		      <td><%= @fund.scheme_name %></td>      
		      <td><%= transaction.folio_id %></td>
		      <td><%= transaction.tr_id %></td>
		      <td><%= transaction.amount %></td>
		      <td><%= transaction.reinvestment_tag %></td>
			</tr>
		</tbody>

	  <% end %>
	</table>

<%end%>
